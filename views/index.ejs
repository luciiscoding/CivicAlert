<%- include('partials/header') %>
<%- include('partials/navbar') %>
<main>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6" data-aos="fade-right" data-aos-duration="1000">
          <h1 class="hero-title animate__animated animate__fadeInUp">Raportează probleme din comunitatea ta</h1>
          <p class="hero-subtitle animate__animated animate__fadeInUp animate__delay-1s">
            Ajută la îmbunătățirea localității tale prin semnalarea problemelor urbane direct către autoritățile responsabile.
          </p>
          <div class="hero-buttons animate__animated animate__fadeInUp animate__delay-2s">
            <a href="#selectare-judet" class="btn btn-primary btn-lg">Începe Acum</a>
            <a href="#cum-functioneaza" class="btn btn-outline-secondary btn-lg ms-2">Află Mai Multe</a>
          </div>
        </div>
        <div class="col-lg-6" data-aos="fade-left" data-aos-duration="1000">
          <div class="hero-image-container">
            <img src="/img/hero-image.svg" alt="CivicAlert" class="img-fluid hero-image">
          </div>
        </div>
      </div>
    </div>
  </section>
  

  <!-- Selectare Județ Section -->
  <section id="selectare-judet" class="select-county-section">
    <div class="container">
      <div class="section-title text-center" data-aos="fade-up">
        <h2 class="animated-text">Selectează Județul</h2>
        <p>Alege județul pentru care dorești să vezi sau să raportezi probleme civice</p>
      </div>
      
      <div class="county-selector" data-aos="fade-up" data-aos-delay="200">
        <div class="row">
          <% const judete = [
            'Alba', 'Arad', 'Argeș', 'Bacău', 'Bihor', 'Bistrița-Năsăud', 'Botoșani', 'Brașov', 
            'Brăila', 'București', 'Buzău', 'Caraș-Severin', 'Călărași', 'Cluj', 'Constanța', 
            'Covasna', 'Dâmbovița', 'Dolj', 'Galați', 'Giurgiu', 'Gorj', 'Harghita', 'Hunedoara', 
            'Ialomița', 'Iași', 'Ilfov', 'Maramureș', 'Mehedinți', 'Mureș', 'Neamț', 'Olt', 'Prahova', 
            'Satu Mare', 'Sălaj', 'Sibiu', 'Suceava', 'Teleorman', 'Timiș', 'Tulcea', 'Vaslui', 
            'Vâlcea', 'Vrancea'
          ]; %>
          
          <% judete.forEach(judet => { %>
            <div class="col-md-3 col-sm-4 col-6 mb-4">
              <a href="/postari/feed/<%= judet %>" class="county-card">
                <div class="county-card-inner">
                  <span class="county-name"><%= judet %></span>
                </div>
              </a>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </section>

  <!-- Cum Funcționează Section -->
  <section id="cum-functioneaza" class="how-it-works-section">
    <div class="container">
      <div class="section-title text-center" data-aos="fade-up">
        <h2>Cum Funcționează</h2>
        <p>Procesul simplu prin care poți contribui la îmbunătățirea comunității tale</p>
      </div>
      
      <div class="row mt-5">
        <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
          <div class="step-card">
            <div class="step-icon">
              <i class="fas fa-user-plus"></i>
            </div>
            <h3>Creează un cont</h3>
            <p>Înregistrează-te cu câțiva pași simpli pentru a putea raporta probleme</p>
          </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
          <div class="step-card">
            <div class="step-icon">
              <i class="fas fa-camera"></i>
            </div>
            <h3>Raportează problema</h3>
            <p>Fotografiază problema, adaugă detalii și marchează locația pe hartă</p>
          </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="300">
          <div class="step-card">
            <div class="step-icon">
              <i class="fas fa-thumbs-up"></i>
            </div>
            <h3>Votează probleme</h3>
            <p>Susține raportările importante pentru a le crește vizibilitatea</p>
          </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="400">
          <div class="step-card">
            <div class="step-icon">
              <i class="fas fa-check-circle"></i>
            </div>
            <h3>Urmărește progresul</h3>
            <p>Vezi când problemele sunt în lucru sau au fost rezolvate</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistici Section -->
  <section class="stats-section">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="100">
          <div class="stat-card">
            <div class="stat-icon">
              <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3 class="stat-number counter">5,782</h3>
            <p class="stat-title">Probleme Raportate</p>
          </div>
        </div>
        
        <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="200">
          <div class="stat-card">
            <div class="stat-icon">
              <i class="fas fa-check-circle"></i>
            </div>
            <h3 class="stat-number counter">3,415</h3>
            <p class="stat-title">Probleme Rezolvate</p>
          </div>
        </div>
        
        <div class="col-md-4 mb-4" data-aos="fade-up" data-aos-delay="300">
          <div class="stat-card">
            <div class="stat-icon">
              <i class="fas fa-users"></i>
            </div>
            <h3 class="stat-number counter">12,947</h3>
            <p class="stat-title">Utilizatori Activi</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="cta-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10 text-center" data-aos="zoom-in">
          <h2>Fii parte din schimbare!</h2>
          <p class="mb-4">Implică-te activ în comunitatea ta și ajută la rezolvarea problemelor locale</p>
          <a href="/utilizatori/register" class="btn btn-primary btn-lg">Înregistrează-te Acum</a>
        </div>
      </div>
    </div>
  </section>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= process.env.GOOGLE_MAPS_API_KEY %>&libraries=places&callback=initMap" async defer></script>
</main>

<%- include('partials/footer') %>