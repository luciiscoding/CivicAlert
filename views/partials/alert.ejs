<!-- 
  Componentă pentru afișarea mesajelor de alertă
  Utilizare: 
  <%- include('partials/alert', { 
    type: 'success|danger|warning|info', 
    message: 'Mesajul de afișat', 
    dismissible: true|false 
  }) %>
-->

<% if (typeof message !== 'undefined' && message) { %>
  <div class="alert alert-<%= typeof type !== 'undefined' ? type : 'info' %> <%= typeof dismissible !== 'undefined' && dismissible ? 'alert-dismissible' : '' %> fade show animate__animated animate__fadeIn" role="alert">
    <% if (typeof icon !== 'undefined' && icon) { %>
      <i class="fas fa-<%= icon %> me-2"></i>
    <% } else { %>
      <% if (typeof type !== 'undefined') { %>
        <% if (type === 'success') { %>
          <i class="fas fa-check-circle me-2"></i>
        <% } else if (type === 'danger') { %>
          <i class="fas fa-exclamation-circle me-2"></i>
        <% } else if (type === 'warning') { %>
          <i class="fas fa-exclamation-triangle me-2"></i>
        <% } else if (type === 'info') { %>
          <i class="fas fa-info-circle me-2"></i>
        <% } %>
      <% } %>
    <% } %>
    
    <%= message %>
    
    <% if (typeof dismissible !== 'undefined' && dismissible) { %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <% } %>
  </div>
<% } %>