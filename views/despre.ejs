  }
  
  .about-section {
    background-color: white;
    border-radius: 10px;
    padding: 2rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }
  
  .about-section h2 {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--primary-bg);
  }
  
  .step-timeline {
