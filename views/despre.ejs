    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  
  .creator-story p {
    color: #6c757d;
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  /* Stiluri pentru animația optimizată */
  .slogan-container {
    background: linear-gradient(135deg, var(--accent-1) 0%, var(--primary-bg) 100%);
    color: white;
    border-radius: 15px;
    padding: 3rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    min-height: 300px;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .slogan-container:hover {
    transform: translateY(-5px);
  }

  /* Efecte de fundal animate */
  .slogan-container::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      rgba(255, 255, 255, 0.05) 10px,
      rgba(255, 255, 255, 0.05) 20px
    );
    animation: moveBackground 20s linear infinite;
    pointer-events: none;
  }

  @keyframes moveBackground {
    0% { transform: translate(-50%, -50%) rotate(0deg); }
    100% { transform: translate(-50%, -50%) rotate(360deg); }
  }

  /* Cercuri animate în fundal */
  .floating-circles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    animation: float 6s ease-in-out infinite;
  }

  .circle:nth-child(1) {
    width: 80px;
    height: 80px;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .circle:nth-child(2) {
    width: 60px;
    height: 60px;
    top: 60%;
    right: 10%;
    animation-delay: 2s;
  }

  .circle:nth-child(3) {
    width: 40px;
    height: 40px;
    top: 30%;
    right: 30%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) scale(1); opacity: 0.7; }
    50% { transform: translateY(-20px) scale(1.1); opacity: 1; }
  }

  /* Textul principal */
  .slogan-content {
    text-align: center;
    z-index: 10;
    position: relative;
  }

  .slogan-words {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
    margin-bottom: 20px;
  }

  .word {
    font-size: 2.5rem;
    font-weight: 700;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    opacity: 0;
    transform: translateY(30px);
    animation: slideInWord 0.8s ease-out forwards;
    position: relative;
    transition: transform 0.3s ease;
  }

  .word.highlight {
    color: #f39c12;
    animation: slideInHighlight 0.8s ease-out forwards;
  }

  .word:nth-child(1) { animation-delay: 0.1s; }
  .word:nth-child(2) { animation-delay: 0.2s; }
  .word:nth-child(3) { animation-delay: 0.3s; }
  .word:nth-child(4) { animation-delay: 0.4s; }
  .word:nth-child(5) { animation-delay: 0.5s; }
  .word:nth-child(6) { animation-delay: 0.6s; }
  .word:nth-child(7) { animation-delay: 0.7s; }

  @keyframes slideInWord {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInHighlight {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Efect hover pentru cuvinte */
  .word:hover {
    transform: scale(1.1) rotate(2deg);
  }

  /* Sublinierea animată */
  .underline {
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 3px;
    background: linear-gradient(90deg, #f39c12, #e74c3c);
    border-radius: 2px;
    animation: expandUnderline 2s ease-out 1s forwards;
  }

  @keyframes expandUnderline {
    to {
      width: 100%;
    }
  }

  /* Butonul de acțiune */
  .action-button {
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 12px 30px;
    border-radius: 25px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    opacity: 0;
    animation: fadeInButton 1s ease-out 1.5s forwards;
  }

  .action-button:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  @keyframes fadeInButton {
    to {
      opacity: 1;
    }
  }

  /* Particule animate */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50%;
    pointer-events: none;
    animation: particle 8s linear infinite;
  }

  @keyframes particle {
    0% {
      transform: translateY(100vh) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100px) rotate(360deg);
      opacity: 0;
    }
  }

  /* Responsive design */
  @media (max-width: 991.98px) {
    .about-image {
      margin-bottom: 2rem;
    }
    
    .step-timeline::before {
